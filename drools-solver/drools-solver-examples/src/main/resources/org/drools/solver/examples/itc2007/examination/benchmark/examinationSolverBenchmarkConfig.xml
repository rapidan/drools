    <sortSolverBenchmarks>true</sortSolverBenchmarks>
    <!-- solverBenchmarkResultComparator -->
    
    <inheritedUnsolvedSolutionFile>data/itc2007/examination/unsolved/exam_comp_set1.xml</inheritedUnsolvedSolutionFile>
